<%- include('layout', { body: `
  <h2>${workout.title}</h2>
  <p><em>${workout.difficulty}</em> Â· by ${workout.username}</p>
  <p>${workout.description || ''}</p>

  <h3>Exercises</h3>
  ${exercises.length === 0 ? `
    <p>No exercises added yet.</p>
  ` : `
    <table>
      <tr>
        <th>Name</th><th>Sets</th><th>Reps</th>
