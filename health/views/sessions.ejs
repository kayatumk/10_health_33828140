<%- include('layout', { body: `
  <h2>My Previous Workout Sessions</h2>
  ${sessions.length === 0 ? `
    <p>You haven't logged any sessions yet.</p>
  ` : `
    ${sessions.map(s => `
      <section class="session-card">
        <h3>${s.workout_title}</h3>
        <p>
          <strong>Date:</strong> ${s.session_date.toISOString().substring(0,10)}
          ${s.duration_minutes ? ` Â· <strong>Duration:</strong> ${s.duration_minutes} min` : ''}
        </p>
        ${s.notes ? `<p><strong>Notes:</strong> ${s.notes}</p>` : ''}

        ${s.exercises.length === 0 ? `
          <p>No exercises logged for this session.</p>
        ` : `
          <table>
            <tr>
              <th>Exercise</th><th>Sets</th><th>Reps</th>
            </tr>
            ${s.exercises.map(e => `
              <tr>
                <td>${e.name}</td>
                <td>${e.sets_done}</td>
                <td>${e.reps_done}</td>
              </tr>
            `).join('')}
          </table>
        `}
      </section>
    `).join('')}
  `}
` }) %>